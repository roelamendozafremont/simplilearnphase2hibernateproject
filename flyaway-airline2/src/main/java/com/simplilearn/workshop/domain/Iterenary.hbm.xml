<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
		"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
		"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

	<class name="com.simplilearn.workshop.domain.Iterenary" table="iterenaries">
		<!-- primary key column in Users table -->
		<id name="id" type="int">
			<column name="id" />
			<generator class="increment" />
		</id>
		<property name="flightDate" type="date">
			<column name="flight_date" />
		</property>
		<property name="origin" type="java.lang.String">
			<column name="origin" />
		</property>		
		<property name="destination" type="java.lang.String">
			<column name="destination" />
		</property>		
		<property name="airline" type="java.lang.String">
			<column name="airline" />
		</property>			
		<property name="seatsAvailable" type="int">
			<column name="seats_available" />
		</property>			
		<property name="fare" type="float">
			<column name="fare" />
		</property>
				
	</class>

</hibernate-mapping>